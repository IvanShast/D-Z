        {
            char[,] map;
            Map(out map);
            int userPositionX = 6;
            int userPositionY = 6;
            
            bool cycleOn = true;
            while (cycleOn)
            {
                DrawMap(map);

                CharacterMovement(ref userPositionX, ref userPositionY, ref map);

                Console.Clear();
            }
        }



        static void DrawMap(char[,] map)
        {
            for (int i = 0; i < map.GetLength(0); i++)
            {
                for (int j = 0; j < map.GetLength(1); j++)
                {
                    Console.Write(map[i, j]);
                }
                Console.WriteLine();
            }
        }

        static void CharacterMovement(ref int offsetByX, ref int offsetByY, ref char[,] map)
        {
            Console.SetCursorPosition(offsetByY, offsetByX);
            Console.Write('@');

            ConsoleKeyInfo charKey = Console.ReadKey();

            switch (charKey.Key)
            {
                case ConsoleKey.UpArrow:
                    if (map[offsetByX - 1, offsetByY] != '#')
                    {
                        offsetByX--;
                    }
                    break;
                case ConsoleKey.DownArrow:
                    if (map[offsetByX + 1, offsetByY] != '#')
                    {
                        offsetByX++;
                    }
                    break;
                case ConsoleKey.RightArrow:
                    if (map[offsetByX, offsetByY + 1] != '#')
                    {
                        offsetByY++;
                    }
                    break;
                case ConsoleKey.LeftArrow:
                    if (map[offsetByX, offsetByY - 1] != '#')
                    {
                        offsetByY--;
                    }
                    break;
            }
        }

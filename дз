using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp17
{
    class Program
    {
        static void Main(string[] args)
        {
            int allPictures = 52;
            int picturesInRow = 3;
            int allRowFull;
            int remainsPictures;
            allRowFull = allPictures / picturesInRow;
            remainsPictures = allPictures % picturesInRow;
            Console.WriteLine($"Полностью заполненых строк - {allRowFull}, лишних картинок - {remainsPictures}.");
        }
    }
}
